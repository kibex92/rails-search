<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
        <%= form_with url: movies_path, class: "d-flex", method: :get do %>
          <%= text_field_tag :query, 
                             params[:query],
                             class: "form-control",
                             placeholder: "Search a movie..."
                             %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>